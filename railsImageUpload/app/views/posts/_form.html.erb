<%= form_for post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.label :picture %>
    <%= f.file_field :picture %>
    <% if @post.picture.url.present? %>
         <img src="<%= @post.picture.url %>">
    <% end  %>
  </div>

  <%= f.submit %>
<% end %>