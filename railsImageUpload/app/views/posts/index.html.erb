<h1>Posts</h1>

<%= link_to 'Add post', new_post_path %>

<%  @posts.each do |item| %>
  <h2><%= link_to item.title, post_path(item) %></h2>
  <p><%= truncate(item.body, length: 150) %></p>
  <p><%= link_to 'Edit', edit_post_path(item) %></p>
  <p><%= link_to 'show', post_path(item) %></p>

<% end %>